\NewCommandIfNotDefined{\eqdef}{%
  \mathrel{\vbox{\offinterlineskip\ialign{%
    \hfil##\hfil\cr%
    $\scriptscriptstyle\mathrm{def}$\cr%
    \noalign{\kern1pt}%
    $=$\cr%
    \noalign{\kern-0.1pt}%
}}}}

\NewCommandIfNotDefined{\restr}[2]{{% we make the whole thing an ordinary symbol
  \left.\kern-\nulldelimiterspace % automatically resize the bar with \right
  #1\hspace{-1pt}\right._{\hspace{-1pt}|#2}% the function
  }}


